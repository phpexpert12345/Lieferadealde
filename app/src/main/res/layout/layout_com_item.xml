<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView
        android:fontFamily="@font/roboto_bold"
        android:id="@+id/tv_menu_item_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_2"
        android:text="Vegetarian Samosa"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_13" />
    <TextView
        android:fontFamily="@font/roboto_bold"
        android:id="@+id/tv_menu_item_size"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_menu_item_sec"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_2"
        android:text="Vegetarian Samosa"
        android:textColor="@color/colorTextSubSecondary"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_menu_item_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_menu_item_size"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginStart="@dimen/dp_10"
        android:fontFamily="@font/roboto_medium"
        android:text="Vegetarian Samosa"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/sp_11" />
</RelativeLayout>