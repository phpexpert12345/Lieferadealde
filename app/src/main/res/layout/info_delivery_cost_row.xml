<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="5"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_view_pincode"
            android:layout_width="@dimen/dp_0"
            android:text="Pincode"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_11"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_view_delivry_address"
            android:layout_width="@dimen/dp_0"
            android:text="Delivery Address"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_2"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_11"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_view_delivery_fee"
            android:layout_width="@dimen/dp_0"
            android:text="Delivery Fee"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_11"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_view_delivery_time"
            android:layout_width="@dimen/dp_0"
            android:text="Delivery Time"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_2"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_11"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_view_min_order"
            android:layout_width="@dimen/dp_0"
            android:text="Min Order\n Amount"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_11"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"/>

</LinearLayout>