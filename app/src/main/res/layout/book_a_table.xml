<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:elevation="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_50"
                android:layout_marginStart="@dimen/dp_10"
                android:src="@drawable/ic_back_arrow" />

            <TextView
                android:id="@+id/tv_faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Book Table"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_15" />

            <RelativeLayout
                android:id="@+id/cart_count_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="?attr/actionBarItemBackground"
                android:gravity="center"
                android:minWidth="20dp"
                android:minHeight="?attr/actionBarSize"
                android:paddingStart="10dp"
                android:paddingEnd="5dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/hotlist_bell"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_margin="0dp"
                    android:gravity="center"
                    android:src="@drawable/vector_cart"
                    android:tint="@color/colorBlack" />

                <TextView
                    android:id="@+id/tv_cart_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/hotlist_bell"
                    android:layout_alignEnd="@id/hotlist_bell"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/cart_count"
                    android:gravity="center"
                    android:minWidth="17sp"
                    android:paddingLeft="5dp"
                    android:paddingTop="0dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="1dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:drawableTint="@color/colorBlack"
                android:drawableLeft="@drawable/user"
                android:hint="" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_email_addres"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:drawablePadding="@dimen/_20sdp"
                android:drawableTint="@color/colorBlack"
                android:drawableLeft="@drawable/ic_email"
                android:hint="" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:inputType="number"
                android:drawablePadding="@dimen/_20sdp"
                android:drawableTint="@color/colorBlack"
                android:drawableLeft="@drawable/ic_call"
                android:hint="" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">

            <TextView
                android:id="@+id/tvBookingDate"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:hint=""
                android:visibility="visible"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:drawableLeft="@drawable/ic_calender"
                android:drawablePadding="@dimen/_20sdp"
                android:drawableTint="@color/colorBlack"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@color/dark_gray"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_marginStart="@dimen/dp_10"
                android:orientation="vertical">

            <TextView
                android:id="@+id/tvBookingTime"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:layout_marginEnd="10dp"
                android:hint=""
                android:singleLine="true"
                android:maxLines="1"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="@dimen/_20sdp"
                android:drawableTint="@color/colorBlack"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@color/dark_gray"/>

            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight=".5"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_book_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:drawableLeft="@drawable/ic_calender"
                    android:drawablePadding="@dimen/_20sdp"
                    android:focusableInTouchMode="true"
                    android:drawableTint="@color/colorBlack"
                    android:inputType="none"
                    android:hint="" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="@dimen/dp_0"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight=".5"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_book_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:drawableLeft="@drawable/ic_time"
                    android:drawablePadding="@dimen/_20sdp"
                    android:drawableTint="@color/colorBlack"
                    android:inputType="none"
                    android:hint="" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:id="@+id/iv"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:src="@drawable/user"/>

            <Spinner
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/spinner_tableSeat"
                android:layout_toEndOf="@+id/iv"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/user"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/dark_gray"/>

        <!--<com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_no_person"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:drawableLeft="@drawable/user"
                android:maxLength="1"
                android:drawablePadding="@dimen/_20sdp"
                android:drawableTint="@color/colorBlack"
                android:inputType="number"
                android:hint="" />
        </com.google.android.material.textfield.TextInputLayout>-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_specia_instruct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:drawableLeft="@drawable/messageicon"
                android:drawablePadding="@dimen/_20sdp"
                android:drawableTint="@color/colorBlack"
                android:hint="" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="@dimen/_120sdp"
            android:fontFamily="@font/roboto_bold"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:textAllCaps="false"
            android:background="@color/colorPrimaryone"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:text="Submit"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
</RelativeLayout>