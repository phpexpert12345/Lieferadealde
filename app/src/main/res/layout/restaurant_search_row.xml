<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        app:cardElevation="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_5">

        <LinearLayout
            android:id="@+id/llTopLayout"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight=".3"
                android:background="@drawable/grey_round_corner_white_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_restaurant_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_100"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/defpizzaimg" />

                <TextView
                    android:id="@+id/txt_discount_avail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_15"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="@dimen/dp_4"
                    android:visibility="gone"
                    android:gravity="center"
                    android:background="@drawable/green_bg_top_round_corner"
                    android:text="3%"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight=".7"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lnr_sponsered"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/sponser"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_15"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/sponsorship"/>

                        <TextView
                            android:id="@+id/tvSponsored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sponsored"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="@dimen/sp_10"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_restaurant_name"
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@+id/lnr_sponsered"
                        android:layout_height="wrap_content"
                        android:text="Free hjdgjgffhdj"
                        android:fontFamily="@font/roboto_bold"
                        android:maxLines="2"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_15" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_restaurant_cusine_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FOUR "
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/sp_13" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/ratingBar"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:theme="@style/RatingBar" />

                    <TextView
                        android:id="@+id/tv_restaurant_total_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:text=""
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_10" />

                    <LinearLayout
                        android:id="@+id/lnr_open_close"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/dp_5"
                        android:gravity="center"
                        android:background="@drawable/circle_background"
                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_item_discount_open_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_10"
                        android:padding="@dimen/dp_5"
                        android:textStyle="normal" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_restaurant_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:fontFamily="@font/roboto_regular"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_restaurant_miles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_restaurant_address"
                    android:maxLines="1"
                    android:fontFamily="@font/roboto_medium"
                    android:text="( 2.3 miles away )"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="@dimen/sp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:layout_weight=".1">

                        <ImageView
                            android:id="@+id/kidred"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:background="@drawable/timer"/>

                        <TextView
                            android:id="@+id/txt_view_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:30"
                            android:textSize="@dimen/sp_11"
                            android:gravity="top"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/colorTextPrimary"
                            android:layout_gravity="top"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:orientation="horizontal"
                        android:layout_weight=".1">

                        <ImageView
                            android:id="@+id/petred"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_15"
                            android:visibility="visible"
                            android:background="@drawable/bike"/>

                        <TextView
                            android:id="@+id/txt_rest_free_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Free"
                            android:layout_gravity="center"
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/colorTextPrimary"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:orientation="horizontal"
                        android:layout_weight="0.1">

                        <ImageView
                            android:id="@+id/minorder"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:background="@drawable/outline"/>

                        <TextView
                            android:id="@+id/txt_rest_min_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:text="02.00"
                            android:layout_gravity="top"
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/colorTextPrimary"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>